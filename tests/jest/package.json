{
    "name": "@node-boot/jest",
    "version": "1.0.0",
    "description": "Test framework for Node_Boot projects",
    "author": "Manuel Santos <ney.br.santos@gmail.com>",
    "license": "MIT",
    "keywords": [
        "tests",
        "node-boot"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodejs-boot/node-boot.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "src/index.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean:build": "rimraf ./dist",
        "dev": "nodemon",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "test": "jest --passWithNoTests",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@node-boot/context": "workspace:*",
        "@node-boot/core": "workspace:*",
        "@node-boot/test": "workspace:*"
    },
    "peerDependencies": {
        "jest": "^29.5.0",
        "@jest/globals": "^29.5.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^18.15.3"
    }
}

{
    "name": "@nodeboot/jest-koa-demo",
    "version": "1.0.5",
    "description": "Demo project for Node-Boot tests with Jest",
    "author": "Manuel Santos <ney.br.santos@gmail.com>",
    "license": "MIT",
    "private": "true",
    "keywords": [
        "tests",
        "node-boot"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodejs-boot/node-boot.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "src/index.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean:build": "rimraf ./dist",
        "dev": "nodemon",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "test": "jest --passWithNoTests",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@nodeboot/config": "workspace:*",
        "@nodeboot/context": "workspace:*",
        "@nodeboot/core": "workspace:*",
        "@nodeboot/starter-openapi": "workspace:*",
        "@nodeboot/koa-server": "workspace:*",
        "@nodeboot/authorization": "workspace:*",
        "@nodeboot/di": "workspace:*",
        "@nodeboot/error": "workspace:*",
        "@nodeboot/starter-actuator": "workspace:*",
        "@nodeboot/starter-persistence": "workspace:*",
        "katxupa": "^1.9.1",
        "reflect-metadata": "^0.2.1",
        "typeorm": "^0.3.20",
        "koa": ">=2.14.2",
        "@koa/router": "^12.0.0",
        "koa-bodyparser": "^4.4.1",
        "@koa/multer": "^3.0.2",
        "koa-session": "^6.4.0",
        "koa-cookies": "^4.0.2",
        "@koa/cors": "^4.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "koa-helmet": "^7.0.2",
        "koa2-swagger-ui": "^5.8.0",
        "hpp": "^0.2.3",
        "typedi": "^0.10.0",
        "winston": "^3.10.0"
    },
    "devDependencies": {
        "@nodeboot/jest": "workspace:*",
        "@types/body-parser": "^1.19.2",
        "@types/koa-cors": "^0.0.2",
        "@types/koa": "^2.13.8",
        "@types/koa-bodyparser": "^4.3.10",
        "@types/koa-helmet": "^6.0.4",
        "jest": "^29.5.0",
        "@types/jest": "^29.5.11",
        "ts-jest": "^29.1.1",
        "pactum": "^3.7.6",
        "axios": "^1.7.9",
        "supertest": "^7.0.0",
        "@types/supertest": "^6.0.2"
    }
}

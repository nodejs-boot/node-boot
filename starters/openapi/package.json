{
    "name": "@nodeboot/starter-openapi",
    "version": "1.1.0",
    "description": "OpenAPI plugin for Node-Boot. It allows OpenAPI specs to be automatically generated from controller endpoints",
    "author": "Manuel Santos <ney.br.santos@gmail.com>",
    "license": "MIT",
    "keywords": [
        "openapi",
        "swagger",
        "swagger-ui"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodejs-boot/node-boot.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean:build": "rimraf ./dist",
        "dev": "nodemon",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "test": "jest",
        "typecheck": "tsc",
        "build:patch": "pnpm build && pnpm version patch",
        "build:minor": "pnpm build && pnpm version minor",
        "build:major": "pnpm build && pnpm version major",
        "release": "pnpm publish --access public --no-git-checks"
    },
    "dependencies": {
        "@nodeboot/context": "workspace:*",
        "@nodeboot/engine": "workspace:*",
        "openapi3-ts": "^2.0.2",
        "lodash.capitalize": "^4.2.1",
        "lodash.merge": "^4.6.2",
        "lodash.startcase": "^4.4.0",
        "path-to-regexp": "^6.2.1",
        "reflect-metadata": "^0.2.1",
        "class-validator-jsonschema": "^4.0.0"
    },
    "devDependencies": {
        "@types/lodash.capitalize": "^4.2.9",
        "@types/lodash.merge": "^4.6.9",
        "@types/lodash.startcase": "^4.4.9",
        "openapi-types": "^12.1.3",
        "@types/reflect-metadata": "^0.1.0",
        "@types/swagger-ui-express": "^4.1.6"
    },
    "optionalDependencies": {
        "koa": "^2.14.2",
        "express": "^4.18.2",
        "fastify": ">=4.21.0",
        "swagger-ui-express": "^5.0.0",
        "koa2-swagger-ui": "^5.8.0",
        "@fastify/swagger-ui": "^1.9.3",
        "@fastify/swagger": "^8.10.0"
    },
    "files": [
        "dist",
        "package.json",
        "README.md",
        "config.d.ts"
    ]
}

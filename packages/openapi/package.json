{
  "name": "@node-boot/openapi",
  "version": "1.0.0",
  "description": "The first typescript example for the Monorepo example",
  "author": "Manuel Santos <ney.br.santos@gmail.com>",
  "license": "MIT",
  "keywords": [
    "monorepo",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nodejs-boot/node-boot.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean:build": "rimraf ./dist",
    "dev": "nodemon",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@node-boot/context": "1.0.0",
    "openapi3-ts": "^3.0.0",
    "routing-controllers-openapi": "^4.0.0",
    "class-validator-jsonschema": "^4.0.0"
  },
  "peerDependencies": {
    "routing-controllers": ">=0.10.4"
  },
  "optionalDependencies": {
    "koa": "^2.14.2",
    "express": "^4.18.2",
    "fastify": ">=4.21.0",
    "swagger-ui-express": "^5.0.0",
    "koa2-swagger-ui": "^5.8.0",
    "@fastify/swagger-ui": "^1.9.3",
    "@fastify/swagger": "^8.10.0"
  }
}

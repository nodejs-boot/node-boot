{
    "name": "@node-boot/engine",
    "version": "1.0.0",
    "description": "Node-Boot engine that enables hte node-boot magic with application server frameworks through drivers",
    "author": "Manuel Santos <ney.br.santos@gmail.com>",
    "license": "MIT",
    "keywords": [
        "driver",
        "engine",
        "core"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodejs-boot/node-boot.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "src/index.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean:build": "rimraf ./dist",
        "dev": "nodemon",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "test": "jest --passWithNoTests",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@node-boot/context": "workspace:*",
        "@node-boot/error": "workspace:*",
        "katxupa": "^1.9.1"
    },
    "peerDependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0"
    },
    "optionalDependencies": {}
}
